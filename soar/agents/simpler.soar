# Time 5:
# (<s> ^shallow sh
#	   ^deep <d1>
#	   ^deep <d2>)
# (<d1> ^left d-left)
# (<d2> ^right d-right)

sp {simple*apply*step5
   (state <s> ^name simple
              ^operator.name step
              ^time 5
              ^deep <d>)
-->
   (<d> ^right d-right -)
   (<s> ^deep.right d-right
        ^shallow sh) 
}

# Time 6: Clear out memory
sp {simple*apply*step6
   (state <s> ^name simple
              ^operator.name step
              ^time 6
              ^deep <d1>
              ^deep <d2>)
   (<d1> ^right d-right)
   (<d2> ^left d-left)
-->
   (<s> ^deep <d1> -
        ^deep <d2> -
        ^shallow sh -)
}


